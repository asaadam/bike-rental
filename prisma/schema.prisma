// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ROLE {
  MANAGER
  USER
}

model User {
  id         String       @id @default(cuid())
  name       String
  email      String       @unique
  password   String
  role       ROLE
  createdAt  DateTime     @default(now())
  RentedBike RentedBike[]
}

model Bike {
  id         String       @id @default(cuid())
  model      String
  color      String
  location   String
  createdAt  DateTime     @default(now())
  rating     Int          @default(0)
  RentedBike RentedBike[]
}

model RentedBike {
  id         String      @id @default(cuid())
  bikeId     String
  userId     String
  startDate  DateTime
  endDate    DateTime
  isCancled  Boolean     @default(false)
  createdAt  DateTime    @default(now())
  bike       Bike        @relation(fields: [bikeId], references: [id], onDelete: Cascade)
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  BikeRating BikeRating?
}

model BikeRating {
  id           String     @id @default(cuid())
  rating       Int
  createdAt    DateTime   @default(now())
  RentedBike   RentedBike @relation(fields: [rentedBikeId], references: [id])
  rentedBikeId String     @unique
}
